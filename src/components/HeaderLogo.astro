---
import data from "../data/header.json";
const { pathname } = Astro.url;
const lang = pathname.startsWith("/en/") ? "en" : "ja";
// Normalize prefix for links
const prefix = lang === "en" ? "/en" : "";
// Safe access with fallback to English
const t = (key) => data[key][lang] ?? data[key].en;
---

<div id="header-logo">
  <p id="logo-text">
    <a href={`${prefix}/`}>
      {t("title")}
    </a>
  </p>
  <p id="sub-text">
    {t("subtitle")}
  </p>
  <div id="header-text">
    <p>{t("header_text")}</p>
  </div>
</div>

<style>

div#header-logo{
	z-index: 1;
	position: absolute;
	top: 30px;
	height: 150px;
	border-top: 1px solid #333;
	border-bottom: 1px solid #333;
	background: url(/images/bg-logo/logo01-white.jpg);
	text-align: left;
}


p#logo-text{
	position: absolute;
	top: 40px;
	left: 18px;
	font-size: 24pt;
	font-weight: bold;
	line-height: 1.1em;
	letter-spacing: -0.5pt;
}

p#sub-text{
	position: absolute;
	top: 80px;
	left: 18px;
	font-size: 10pt;
	font-weight: bold;
	line-height: 12pt;
	letter-spacing: -0.5pt;
}

p#logo-text,
p#sub-text{ color: #333; }
p#logo-text a{ text-decoration: none; }
p#logo-text a:link{ color: #333; }
p#logo-text a:visited{ color: #333; }
p#logo-text a:hover{ color: #990000; }



div#header-text{
	position: absolute;
	top: 112px;
	right: 20px;
	width: 400px;
	font-size: 9pt;
	line-height: 14pt;
	text-align: right;
	color: #333;
}
</style>